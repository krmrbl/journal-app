<h1>Categories</h1>

<table>
  <tr>
    <td>Category Name</td>
    <td>Category Body</td>
  </tr>

  <%@categories.each do |category| %>
    <tr>
      <td><%= link_to category.name, category %></td>
      <td><%= category.body %></td>
    </tr>
    <%end%>
</table>

<%= link_to "new category", new_category_path %>